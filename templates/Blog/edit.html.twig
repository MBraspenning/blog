{% extends 'base.html.twig' %}

{% set active = 'edit' %}

{% block body %}

<h1 class="mt-4">Edit post</h1>

{{ form_start(form) }}
    
    <div class="form-group">
        {{ form_label(form.Title) }}
        {{ form_widget(form.Title, {'attr': {'class': 'form-control'}}) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.introduction) }}
        {{ form_widget(form.introduction, {'attr': {'class': 'form-control'}}) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.Body) }}
        {{ form_widget(form.Body, {'attr': {'class': 'form-control'}}) }}
    </div>
    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}, 'label': 'Edit Post'}) }}
    
{{ form_end(form) }}

{% endblock %}